<?xml version="1.0" encoding="UTF-8"?>
<ViewCell xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Sapienza.NewsFeed.CellViews.FeedCell" xmlns:local="clr-namespace:Sapienza" xmlns:htmlLabel="clr-namespace:Plugin.HtmlLabel;assembly=Plugin.HtmlLabel">
    <StackLayout Orientation="Horizontal">
        <StackLayout Margin="5" BackgroundColor="Transparent">
            <StackLayout Orientation="Horizontal" Margin="5,0,0,0">
                <Image x:Name="image" Source="{Binding imageURL}" WidthRequest="128" Aspect="AspectFit" />
                <StackLayout Orientation="Vertical">
                    <Label Text="{Binding title}" MinimumHeightRequest="20" Margin="2" FontSize="14" LineBreakMode="WordWrap" FontAttributes="Bold" />
                    <Label Text="{Binding description}" MinimumHeightRequest="20" Margin="2" FontSize="12" LineBreakMode="WordWrap" />
                </StackLayout>
            </StackLayout>
            <BoxView HeightRequest="2" BackgroundColor="#77202D" HorizontalOptions="FillAndExpand" Opacity="0.8" />
        </StackLayout>
    </StackLayout>
</ViewCell>